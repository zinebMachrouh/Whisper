{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/index.php",
        "destination": "/index.php",
        "type": 301
      },
      {
        "source": "/",
        "destination": "/index.php",
        "type": 301
      }
    ]
  }
}